upstream myproxy {
{% for host in groups['webapps'] %}
    {% if hostvars[host].get('port') %}
        server {{ host }}:{{ hostvars[host].get('port') }};
    {% else %}
        server {{ host }}:{{ upstream_proxy_port }};
    {% endif %}
{% endfor %}
}

server {
    listen 80;
    server_name {{ inventory_hostname }};
    root /var/www/html/;

    location / {
        proxy_pass http://myproxy;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

}